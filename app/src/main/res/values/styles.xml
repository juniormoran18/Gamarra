<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="White" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/lightorange</item>
        <item name="android:textSize">@color/lightorange</item>
        <item name="android:textColorPrimary">@color/lightorange</item>
        <item name="colorAccent">@color/lightorange</item>
        <item name="colorControlNormal">@color/lightorange</item>
        <item name="colorControlActivated">@color/lightorange</item>
    </style>

</resources>
